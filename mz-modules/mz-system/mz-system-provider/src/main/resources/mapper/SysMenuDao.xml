<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mz.system.provider.dao.SysMenuDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.mz.system.model.entity.SysMenuEntity" id="sysMenuMap">
        <id property="menuId" column="menu_id"/>
        <result property="menuName" column="menu_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="orderNum" column="order_num"/>
        <result property="icon" column="icon"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="query" column="QUERY"/>
        <result property="isFrame" column="is_frame"/>
        <result property="isCache" column="is_cache"/>
        <result property="menuType" column="menu_type"/>
        <result property="visible" column="visible"/>
        <result property="status" column="STATUS"/>
        <result property="perms" column="perms"/>
        <result property="icon" column="icon"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <!--当前用户所具有菜单-->
    <select id = "getMenuByUserId" resultType="com.mz.system.model.dto.SysMenuDto">
        SELECT sm.*
        FROM sys_menu sm
        <if test="ifAdmin != true">
            LEFT JOIN sys_role_menu srm ON srm.menu_id = sm.menu_id
        </if>
        <where>
            <if test = "ifAdmin != true">
                srm.role_id in (SELECT sur.role_id FROM sys_user_role sur WHERE sur.user_id = #{userId})
            </if>
            and sm.menu_type in ('M', 'C') and sm.status = 0
        </where>
        order by sm.parent_id, sm.order_num
    </select>

    <!--查询当前用户的权限值-->
    <select id = "getAuthorities" resultType = "java.lang.String">
        SELECT sm.perms
        FROM sys_menu sm
        LEFT JOIN sys_role_menu srm ON srm.menu_id = sm.menu_id
        WHERE srm.role_id in (SELECT sur.role_id FROM sys_user_role sur WHERE sur.user_id = #{userId})
        and sm.perms  is not null and ltrim(sm.perms)&lt;&gt; ' '
    </select>


</mapper>