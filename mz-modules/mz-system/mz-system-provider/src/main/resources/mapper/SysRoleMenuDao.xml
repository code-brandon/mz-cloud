<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.mz.system.provider.dao.SysRoleMenuDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type = "com.mz.system.model.entity.SysRoleMenuEntity" id = "sysRoleMenuMap">
        <result property = "roleId" column = "role_id"/>
        <result property = "menuId" column = "menu_id"/>
    </resultMap>

    <!--根据角色Id获取菜单ID集合-->
    <insert id = "insertRoleMenus">
        insert into `sys_role_menu` (`role_id`, `menu_id`)
        values
        <foreach collection = "roleMenus" separator = "," item = "item">
            (#{item.roleId},#{item.menuId})
        </foreach>
    </insert>

    <!--批量插入 角色和菜单关联-->
    <select id = "selectMenuIdsByRoleId" resultType = "java.lang.Long">
        select `menu_id`
        from `sys_role_menu`
        where role_id = #{roleId}
    </select>


</mapper>